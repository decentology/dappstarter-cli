version: '3.7'

networks:
    dappstarter_host:
        name: dappstarter_host
        driver: bridge

services:
    syncthing:
        image: syncthing/syncthing:latest
        labels:
            - com.decentology.dappstarter.syncthing
        container_name: ${DS_SYNCTHING_NAME}
        hostname: ${DS_SYNCTHING_NAME}
        environment:
            - PUID=1000
            - PGID=1000
        ports:
            - ${DS_SYNCTHING_PORT}:8384
        networks:
            - dappstarter_host
